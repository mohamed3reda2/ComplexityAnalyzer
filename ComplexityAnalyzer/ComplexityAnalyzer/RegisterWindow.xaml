<Window x:Class="ComplexityAnalyzer.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="800"
        Background="#1E1E1E">
    <Grid Margin="20">
        <StackPanel Margin="114,44,114,44">
            <TextBlock Foreground="White"  Text="Name:" Margin="0,0,0,10" FontSize="16" Width="236"/>
            <TextBox x:Name="NameInput" Height="30" Margin="0,0,0,20" Width="235"/>

            <TextBlock Foreground="White"  Text="Email:" Margin="0,0,0,10" FontSize="16" Width="236"/>
            <TextBox x:Name="EmailInput" Height="30" Margin="0,0,0,20" Width="235"/>

            <Button Content="Register" Height="40" Click="RegisterButton_Click"    Background="#007ACC" Foreground="White" FontSize="16" Width="132"/>
        </StackPanel>
    </Grid>
</Window>
